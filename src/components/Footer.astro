---
const currentPath = Astro.url.pathname;
---


<footer class="border-t border-neutral-200 bg-[#f8f8f6]">
  <div class="mx-auto max-w-6xl px-6 py-20">

    <!-- TOP GRID -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-24 items-start">

      <!-- LEFT: BIG NAV -->
   <nav class="space-y-10">
  <a
    href="/"
    class={`block text-5xl md:text-6xl font-light tracking-tight transition
      ${currentPath === "/" ? "underline" : "hover:opacity-60"}`}
  >
    Home →
  </a>

  <a
    href="/writings"
    class={`block text-5xl md:text-6xl font-light tracking-tight transition
      ${currentPath.startsWith("/writings") ? "underline" : "hover:opacity-60"}`}
  >
    Writings →
  </a>

  <a
    href="/account"
    class={`block text-5xl md:text-6xl font-light tracking-tight transition
      ${currentPath === "/account" ? "underline" : "hover:opacity-60"}`}
  >
    Account →
  </a>

  <a
    href="/login"
    class={`block text-5xl md:text-6xl font-light tracking-tight transition
      ${currentPath === "/login" ? "underline" : "hover:opacity-60"}`}
  >
    Enter →
  </a>
</nav>


      <!-- RIGHT: NEWSLETTER + CONTACT -->
      <div class="space-y-16">

        <!-- Newsletter -->
        <div>
          <h3 class="text-xl mb-3">Newsletter</h3>
          <p class="text-neutral-400 mb-6 max-w-md">
            Griffith College Dublin
          </p>

          <form class="flex max-w-md gap-3">
            <input
              type="email"
              placeholder="Email"
              class="flex-1 rounded-full bg-neutral-900 border border-white/10 px-5 py-3 text-sm focus:outline-none focus:border-white/30"
            />
            <button
              type="button"
              class="rounded-full bg-white text-black px-5 py-3 text-sm hover:opacity-80 transition"
            >
              →
            </button>
          </form>
        </div>

        <!-- Contact -->
        <div class="space-y-3 text-lg">
          <p>Naransuvd-3184287blog.com</p>
          <p class="text-neutral-400">Ireland</p>
        </div>

      </div>
    </div>

    <!-- BOTTOM BAR -->
    <div class="mt-32 flex flex-col md:flex-row items-center justify-between gap-6 text-sm text-neutral-500">

      <p>© 2025. All rights reserved.</p>

      <div class="flex gap-6 uppercase tracking-widest">
        <a href="#" class="hover:text-neutral-200">Instagram</a>
        <a href="#" class="hover:text-neutral-200">YouTube</a>
        <a href="#" class="hover:text-neutral-200">X</a>
      </div>

    </div>

  </div>
</footer>
